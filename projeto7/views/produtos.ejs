<%- include("partials/header") %>
    <section class="header-pagina-interna">
        <div class="container">
            <h2>Produtos</h2>
        </div>
    </section>
    <section class="mt-3">
        <div class="container" id="botoes-categorias">
            <a class="btn btn-success" onclick="mostrarTodosOsProdutos()">Todos</a>
        </div>
    </section>
    <section class="produtos mt-3">
        <div id="lista-produtos" class="container d-lg-flex flex-wrap column-gap-3">

            <% produtos.forEach(produto=> { %>
                <div class="card p-2 w-lg-25" data-categoria="<%= produto.categoria %>">
                    <div class="imagem d-flex align-items-center justify-content-center">
                        <img src="/assets/img/<%= produto.imagem %>" alt="<%= produto.nome %>" class="img-fluid">
                    </div>
                    <h3 class="text-uppercase mt-1">
                        <%= produto.nome %>
                    </h3>
                    <p class="mb-1 mt-1">
                        Descrição...
                    </p>
                    <div class="d-flex justify-content-between">
                        <span>
                            R$
                            <span class="text-success">
                                <%= produto.preco %>
                            </span>
                        </span>
                        <a onclick="adicionarProdutoAoCarrinho('<%= produto.id %>', '<%= produto.nome %>', '<%= produto.imagem %>', '<%= produto.preco %>')"
                            class="btn1">
                            <i class="fa-solid fa-plus"></i>
                        </a>
                    </div>
                </div>
                <% }) %>

        </div>
    </section>
    <!-- <script src="/assets/js/produtos.js"></script> -->
    <%- include("partials/footer") %>